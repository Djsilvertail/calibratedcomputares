<!DOCTYPE html>
<html>
  <head>
    <title>Reviews - Calibrated Computares</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('partials/header') %>

    <section class="section">
      <h2 class="bold">What Our Customers Are Saying</h2>

      <% reviews.forEach((review, index) => { %>
      <div class="review-row <%= index % 2 === 1 ? 'reverse' : '' %>">
        <div class="review-text">
          <p class="review-quote"><%= review.text %></p>
          <p class="review-author">— <%= review.name %></p>
          <p class="review-rating">
            <% for (let i = 1; i <= 5; i++) { %>
            <% if (i <= review.rating) { %>
            <span class="star">&#9733;</span>
            <% } else { %>
            <span class="star empty">&#9734;</span>
            <% } %>
            <% } %>
          </p>
        </div>
      </div>
      <% }); %>
    </section>

    <% if (currentUser) { %>
    <section class="section">
      <h3>Leave a Review</h3>
      <form action="/reviews" method="POST" class="review-form">
        <input type="text" name="name" placeholder="Your Name" required><br>
        <textarea name="text" placeholder="Your Review" required></textarea><br>

        <label for="rating">Rating:</label>
        <select name="rating" id="rating" required>
          <option value>Select rating</option>
          <option value="5">★★★★★ (5)</option>
          <option value="4">★★★★☆ (4)</option>
          <option value="3">★★★☆☆ (3)</option>
          <option value="2">★★☆☆☆ (2)</option>
          <option value="1">★☆☆☆☆ (1)</option>
        </select><br>

        <button type="submit" class="btn">Submit Review</button>
      </form>
    </section>
    <% } else { %>
    <section class="section">
      <p>Please <a href="/login">log in</a> to leave a review.</p>
    </section>
    <% } %>

    <%- include('partials/footer') %>
  </body>
</html>
